{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "compiled",
    "paths": {
      "@grafana/slate-react": ["slate-react"],
      "@grafana/ui": ["."]
    },
    "rootDirs": [".", "stories"],
    "typeRoots": ["./node_modules/@types"],
    "isolatedModules": true,
    "target": "ES6",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ES6",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "types": ["vite/client"]
  },
  "exclude": ["dist"],
  "include": ["src"]
}
